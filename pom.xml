<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.deeplearning4j</groupId>
    <artifactId>deeplearning4j</artifactId>
    <version>1.0.0-SNAPSHOT</version>

    <repositories>
        <repository>
            <id>sonatype-nexus-snapshots</id>
            <name>Sonatype Nexus Snapshots</name>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <scm>
        <connection>scm:git://github.com:deeplearning4j/deeplearning4j.git</connection>
        <developerConnection>scm:git:git@github.com:deeplearning4j/deeplearning4j.git</developerConnection>
        <url>git@github.com:deeplearning4j/deeplearning4j.git</url>
        <tag>HEAD</tag>
    </scm>

    <packaging>pom</packaging>

    <name>deeplearning4j</name>
    <description>Deeplearning4j Monorepo</description>
    <url>http://deeplearning4j.org/</url>

    <profiles>
        <profile>
            <id>testresources</id>
            <modules>
                <module>dl4j-test-resources</module>
            </modules>
        </profile>
        <profile>
            <id>test-nd4j-native</id>
            <modules>
                <module>dl4j-test-resources</module>
            </modules>
        </profile>
        <profile>
            <id>test-nd4j-cuda-9.1</id>
            <modules>
                <module>dl4j-test-resources</module>
            </modules>
        </profile>
        <profile>
            <id>all</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>libnd4j</module>
                <module>nd4j</module>
                <module>datavec</module>
                <module>deeplearning4j</module>
                <module>arbiter</module>
                <!--        <module>nd4s</module>-->
                <module>gym-java-client</module>
                <module>rl4j</module>
                <module>scalnet</module>
                <module>jumpy</module>
            </modules>
        </profile>
        <profile>
            <id>ci-build-backend-modules</id>
            <modules>
                <module>libnd4j</module>
                <module>nd4j</module>
            </modules>
        </profile>
        <profile>
            <id>ci-build-gpu-dependent-modules</id>
            <modules>
                <module>datavec</module>
                <module>deeplearning4j</module>
            </modules>
        </profile>
        <profile>
            <id>ci-build-generic-modules</id>
            <modules>
                <module>arbiter</module>
                <!--        <module>nd4s</module>-->
                <module>gym-java-client</module>
                <module>rl4j</module>
                <module>scalnet</module>
                <module>jumpy</module>
            </modules>
        </profile>
    </profiles>

</project>
